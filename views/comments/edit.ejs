<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center"><strong></strong> - Edit the review!</h1>
            <div style="width: 30% ; margin: 25px auto;">
                <form action="/camping/<%= campgroundid %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value = "<%= comment.text %>"></input>    
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</input>    
                </div>
            </div>
            </form>
            <a href = "/camping/<%= campgroundid %>">Go Back</a>
    </div>
</div>

